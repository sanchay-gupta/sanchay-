#include <iostream>

using namespace std;

int main()
{
    int i,j;
    for(i=1;i<5;i++){
        for(j=1;j<i+1;j++){
            cout<<"*";
        }
        for(j=1;j<=6-2*(i-1);j++){
            cout<<" ";
        }
        for(j=1;j<i+1;j++){
            cout<<"*";
        }
        cout<<"\n";
    }
    for(i=4;i>0;i--){
        for(j=1;j<i+1;j++){
            cout<<"*";
        }
        for(j=1;j<=6-2*(i-1);j++){
            cout<<" ";
        }
        for(j=1;j<i+1;j++){
            cout<<"*";
        }
        cout<<"\n";
    }
    return 0;
}
